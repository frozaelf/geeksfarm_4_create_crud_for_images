<div class="page-header">
  <%= link_to posts_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_post_path(@post), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show post</h1>
</div>

    <div class="thumbnail col-md-3">
      <a href="<%= @post.image.url(:large) %>" class="colorbox img-responsive"><%= image_tag @post.image.url , :class => "img-responsive"%></a>
      <div class="caption">
      	<h4><b><%= @post.title %></b></h4>
      	<p><%= @post.content %><p>
      </div>
    </div>