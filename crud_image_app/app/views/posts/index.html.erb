<div class="row">
  <div class="col-md-6">
  <h1>Listing posts</h1>
  </div>
  <div class="col-md-6">
<br>
  <%= link_to new_post_path, class: 'btn btn-inverse pull-right btn-raised' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Post
  <% end %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Image</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @posts) do |post| %>
            <td><%= post.title %></td>
            <td><%= post.content.truncate(20) %></td>
            <td><%= image_tag post.image.url(:thumb) %></td>
            <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @posts, :theme => 'twitter-bootstrap-3' %>
