    <script>
  $(document).ready(function () {
    $('#masonry-list').masonry({
    itemSelector: '.item-masonry',
    columnWidth: '.item-masonry'
  });
  
  });
  </script>
  <div id="masonry-list">
    <% @masonry.each do |post| %>
      <div class="item-masonry col-md-3">
        <div class="thumbnail">
          <a href="<%= post.image.url(:large) %>" class="colorbox"><%= image_tag post.image.url , :class => "img-responsive"%></a>
          <div class="caption">
          	<h4><b><%= post.title %></b></h4>
          	<p><%= post.content %><p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
